<UserControl x:Class="KlubSportowy.Views.RaportFinansowyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KlubSportowy.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1000">

    <Grid Background="#F4F7F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Margin="15" CornerRadius="12" BorderThickness="1" BorderBrush="#DCE1E5">
            <Border Padding="20">
                <StackPanel>
                    <TextBlock Text="Analiza Finansowa - Raport Biznesowy" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="#B80006"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="5">
                            <Label Content="Data Początkowa:" Foreground="#555"/>
                            <DatePicker SelectedDate="{Binding DataOd}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5">
                            <Label Content="Data Końcowa:" Foreground="#555"/>
                            <DatePicker SelectedDate="{Binding DataDo}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,5">
                            <Button Content="📊 Generuj" 
                                    Command="{Binding ShowReportCommand}" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Width="110" Height="35" Margin="5,0"/>

                            <Button Content="📄 PDF" 
                                    Command="{Binding ExportToPdfCommand}" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Width="110" Height="35" 
                                    Background="#333" Margin="5,0"/>

                            <Button Content="🖨️ Drukuj" 
                                    Command="{Binding PrintCommand}" 
                                    CommandParameter="{Binding ElementName=PrintArea}"
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Width="110" Height="35" 
                                    Background="#555" Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>

        <Grid x:Name="PrintArea" Grid.Row="1" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
                <TextBlock Text="{Binding SumaPrzychodow, ConverterCulture='pl-PL', StringFormat={}ŁĄCZNY PRZYCHÓD: {0:C}}" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="DarkGreen"/>
            </StackPanel>

            <Border Grid.Row="1" Background="White" Margin="15" CornerRadius="12" BorderThickness="1" BorderBrush="#DCE1E5">
                <Grid Margin="20">
                    <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Bottom">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Okres (Miesiąc/Rok)" Labels="{Binding Labels}"/>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Kwota" LabelFormatter="{Binding YFormatter}"/>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>