<local:WszystkieViewBase x:Class="KlubSportowy.Views.PlatnosciView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KlubSportowy.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="white">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" AutoGenerateColumns="False" ItemsSource="{Binding List}" IsReadOnly="True" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding PlatnoscId}"/>
                <DataGridTextColumn Header="ZawodnikId" Binding="{Binding ZawodnikId}"/>
                <DataGridTextColumn Header="Kwota" Binding="{Binding Kwota}"/>
                <DataGridTextColumn Header="Data wpłaty" Binding="{Binding DataWplaty, StringFormat={}{0:yyyy-MM-dd}}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="CzyAktywny" Binding="{Binding CzyAktywny}"/>
                <DataGridTextColumn Header="Uwagi" Binding="{Binding Uwagi}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <local:JedenViewBase Grid.Row="1" Visibility="{Binding IsAdding, Converter={StaticResource BoolToVis}}">
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Margin="10,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="115"/>
                        <ColumnDefinition Width="35"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="ZawodnikId"/>
                    <TextBox Grid.Column="1" Text="{Binding Path=ZawodnikId, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                    <Button Grid.Column="2" Content="..." Command="{Binding WybierzZawodnikaCommand}" Margin="5,0,0,0"/>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="1" Margin="10,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Kwota"/>
                    <TextBox Grid.Column="1" Text="{Binding Path=Kwota, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="2" Margin="10,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Data wpłaty"/>
                    <DatePicker Grid.Column="1" SelectedDate="{Binding Path=DataWplaty, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="3" Margin="10,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Status"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding StatusyOptions}" SelectedItem="{Binding Status, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="4" Margin="10,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="CzyAktywny"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding CzyAktywnyOptions}" SelectedItem="{Binding CzyAktywnyWybor}"/>
                </Grid>

                <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Margin="10,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Uwagi"/>
                    <TextBox Grid.Column="1" Text="{Binding Path=Uwagi, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

            </Grid>
        </local:JedenViewBase>
    </Grid>
</local:WszystkieViewBase>