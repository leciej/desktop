<UserControl x:Class="KlubSportowy.Views.WybierzTreneraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KlubSportowy.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid Background="{StaticResource SurfaceBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Margin="10" CornerRadius="8" 
                BorderBrush="{StaticResource BorderLineBrush}" BorderThickness="1">
            <Expander Header="Wyszukaj trenera" IsExpanded="True" Padding="10">
                <UniformGrid Columns="3" Margin="5">
                    <StackPanel Margin="5">
                        <Label Content="Szukaj w:" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ComboBox ItemsSource="{Binding FilterColumnOptions}" SelectedItem="{Binding SelectedFilterColumn}"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Fraza:" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <Label Content="Sortuj wg:" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ComboBox ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SortBy}"/>
                    </StackPanel>
                </UniformGrid>
            </Expander>
        </Border>

        <DataGrid Grid.Row="1" Margin="10,0,10,10" AutoGenerateColumns="False" 
                  ItemsSource="{Binding List}" SelectedItem="{Binding WybranyTrener}"
                  IsReadOnly="True" SelectionMode="Single" RowHeight="32"
                  BorderBrush="{StaticResource BorderLineBrush}" BorderThickness="1" 
                  SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TrenerId}" Width="40"/>
                <DataGridTextColumn Header="Imię" Binding="{Binding Imie}" Width="*"/>
                <DataGridTextColumn Header="Nazwisko" Binding="{Binding Nazwisko}" Width="*"/>
                <DataGridTextColumn Header="Specjalizacja" Binding="{Binding Specjalizacja}" Width="1.2*"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderLineBrush}" 
                BorderThickness="0,1,0,0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Wybierz trenera" 
                        Command="{Binding WybierzIZamknijCommand}"
                        Width="160" Height="35"
                        Style="{StaticResource ModernButtonStyle}"
                        ToolTip="Zatwierdź wybór trenera i wróć do formularza drużyny"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>