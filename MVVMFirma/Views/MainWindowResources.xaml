<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:KlubSportowy.ViewModels"
                    xmlns:vw="clr-namespace:KlubSportowy.Views">

    <!-- ===================================================== -->
    <!-- BRUSHES – STONOWANE BARWY ARSENALU                  -->
    <!-- ===================================================== -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#B71C1C"/>
    <!-- ciemny czerwony – top bar -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#FFEBEE"/>
    <!-- jasny czerwony – sidebar -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FAFAFA"/>
    <!-- workspace tło -->
    <SolidColorBrush x:Key="BorderLineBrush" Color="#E0E0E0"/>
    <!-- szare obramowania -->
    <SolidColorBrush x:Key="TextBrush" Color="#212121"/>
    <!-- główny tekst -->
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#616161"/>
    <!-- tekst poboczny -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FFC107"/>
    <!-- złoty akcent -->
    <SolidColorBrush x:Key="SidebarItemBrush" Color="#FFCDD2"/>
    <!-- lekki czerwony element sidebar -->

    <!-- ===================================================== -->
    <!-- VIEW ↔ VIEWMODEL                                     -->
    <!-- ===================================================== -->
    <DataTemplate DataType="{x:Type vm:DruzynyViewModel}">
        <vw:DruzynyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:FrekwencjaViewModel}">
        <vw:FrekwencjaView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:HarmonogramObiektowViewModel}">
        <vw:HarmonogramObiektowView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:KontuzjeViewModel}">
        <vw:KontuzjeView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:LogiOperacjiViewModel}">
        <vw:LogiOperacjiView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:MagazynyViewModel}">
        <vw:MagazynyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:MeczeViewModel}">
        <vw:MeczeView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:PlatnosciViewModel}">
        <vw:PlatnosciView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:RodziceViewModel}">
        <vw:RodziceView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SprzetViewModel}">
        <vw:SprzetView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:StatystykiViewModel}">
        <vw:StatystykiView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:TrenerzyViewModel}">
        <vw:TrenerzyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:TreningiViewModel}">
        <vw:TreningiView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:UzytkownicyViewModel}">
        <vw:UzytkownicyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WypozyczeniaSprzetuViewModel}">
        <vw:WypozyczeniaSprzetuView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ZawodnicyViewModel}">
        <vw:ZawodnicyView/>
    </DataTemplate>

    <!-- ===================================================== -->
    <!-- HEADERED CONTENT CONTROL                              -->
    <!-- ===================================================== -->
    <Style x:Key="MainHCCStyle" TargetType="HeaderedContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="HeaderedContentControl">
                    <Border Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderLineBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Margin="6"
                            SnapsToDevicePixels="True">
                        <DockPanel>
                            <!-- HEADER -->
                            <Border DockPanel.Dock="Top"
                                    Background="{DynamicResource PrimaryBrush}"
                                    CornerRadius="10,10,0,0"
                                    Padding="10">
                                <TextBlock Text="{TemplateBinding Header}"
                                           Foreground="White"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </Border>

                            <!-- CONTENT -->
                            <ContentPresenter Margin="10"/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===================================================== -->
    <!-- COMMANDS (SIDEBAR)                                    -->
    <!-- ===================================================== -->
    <DataTemplate x:Key="CommandsTemplate">
        <ItemsControl ItemsSource="{Binding}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding Command}"
                            Content="{Binding DisplayName}"
                            HorizontalContentAlignment="Left"
                            Padding="12,8"
                            Margin="0,2"
                            Background="{DynamicResource SidebarItemBrush}"
                            BorderBrush="{DynamicResource BorderLineBrush}"
                            Foreground="{DynamicResource TextBrush}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{DynamicResource SidebarItemBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderLineBrush}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Left"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DataTemplate>

    <!-- ===================================================== -->
    <!-- TABS                                                  -->
    <!-- ===================================================== -->
    <DataTemplate x:Key="ClosableTabItemTemplate">
        <DockPanel LastChildFill="True">
            <Button Command="{Binding CloseCommand}"
                    Content="✕"
                    Width="18"
                    Height="18"
                    FontSize="10"
                    Margin="6,0,0,0"
                    DockPanel.Dock="Right"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Cursor="Hand"/>
            <TextBlock Text="{Binding DisplayName}"
                       VerticalAlignment="Center"/>
        </DockPanel>
    </DataTemplate>

    <DataTemplate x:Key="WorkspacesTemplate">
        <TabControl ItemsSource="{Binding}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemTemplate="{DynamicResource ClosableTabItemTemplate}"
                    BorderBrush="{DynamicResource BorderLineBrush}"/>
    </DataTemplate>

</ResourceDictionary>
