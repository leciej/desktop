<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:KlubSportowy.ViewModels"
                    xmlns:vw="clr-namespace:KlubSportowy.Views">

    <SolidColorBrush x:Key="PrimaryBrush" Color="#B71C1C"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#FFEBEE"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="BorderLineBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextBrush" Color="#212121"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#616161"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#FFC107"/>
    <SolidColorBrush x:Key="SidebarItemBrush" Color="#FFCDD2"/>

    <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6" 
                            BorderBrush="{StaticResource BorderLineBrush}" 
                            BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,2"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Height" Value="28"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="5,0"/>
        <Setter Property="Margin" Value="0,2"/>
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="ToolTip" 
                        Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="BorderThickness" Value="1.5"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Control" x:Key="ValidatableControlStyle">
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="ToolTip" 
                        Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <DataTemplate DataType="{x:Type vm:WybierzTreneraViewModel}">
        <vw:TrenerzyView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:DruzynyViewModel}">
        <vw:DruzynyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:FrekwencjaViewModel}">
        <vw:FrekwencjaView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:HarmonogramObiektowViewModel}">
        <vw:HarmonogramObiektowView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:KontuzjeViewModel}">
        <vw:KontuzjeView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:LogiOperacjiViewModel}">
        <vw:LogiOperacjiView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:MagazynyViewModel}">
        <vw:MagazynyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:MeczeViewModel}">
        <vw:MeczeView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:PlatnosciViewModel}">
        <vw:PlatnosciView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:RodziceViewModel}">
        <vw:RodziceView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SprzetViewModel}">
        <vw:SprzetView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:StatystykiViewModel}">
        <vw:StatystykiView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:TrenerzyViewModel}">
        <vw:TrenerzyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:TreningiViewModel}">
        <vw:TreningiView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:UzytkownicyViewModel}">
        <vw:UzytkownicyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WypozyczeniaSprzetuViewModel}">
        <vw:WypozyczeniaSprzetuView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ZawodnicyViewModel}">
        <vw:ZawodnicyView/>
    </DataTemplate>

    <Style x:Key="MainHCCStyle" TargetType="HeaderedContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="HeaderedContentControl">
                    <Border Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderLineBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Margin="6"
                            SnapsToDevicePixels="True">
                        <DockPanel>
                            <Border DockPanel.Dock="Top"
                                    Background="{DynamicResource PrimaryBrush}"
                                    CornerRadius="10,10,0,0"
                                    Padding="10">
                                <TextBlock Text="{TemplateBinding Header}"
                                           Foreground="White"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </Border>

                            <ContentPresenter Margin="10"/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="CommandsTemplate">
        <ItemsControl ItemsSource="{Binding}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding Command}"
                            Content="{Binding DisplayName}"
                            HorizontalContentAlignment="Left"
                            Padding="12,8"
                            Margin="0,2"
                            Style="{StaticResource ModernButtonStyle}">
                        <Button.Resources>
                            <SolidColorBrush x:Key="PrimaryBrush" Color="#FFCDD2"/>
                        </Button.Resources>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DataTemplate>

    <DataTemplate x:Key="ClosableTabItemTemplate">
        <DockPanel LastChildFill="True">
            <Button Command="{Binding CloseCommand}"
                    Content="✕"
                    Width="18"
                    Height="18"
                    FontSize="10"
                    Margin="6,0,0,0"
                    DockPanel.Dock="Right"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Cursor="Hand"/>
            <TextBlock Text="{Binding DisplayName}"
                       VerticalAlignment="Center"/>
        </DockPanel>
    </DataTemplate>

    <DataTemplate x:Key="WorkspacesTemplate">
        <TabControl ItemsSource="{Binding}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemTemplate="{DynamicResource ClosableTabItemTemplate}"
                    BorderBrush="{DynamicResource BorderLineBrush}"/>
    </DataTemplate>

</ResourceDictionary>