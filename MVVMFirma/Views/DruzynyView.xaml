<local:WszystkieViewBase x:Class="KlubSportowy.Views.DruzynyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KlubSportowy.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="1000">

    <local:WszystkieViewBase.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style TargetType="Control" x:Key="ValidControlStyle">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" 
                            Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </local:WszystkieViewBase.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}"
                  Grid.Row="0" Margin="10" Background="Transparent"
                  BorderBrush="#DDD" BorderThickness="1" RowHeight="28">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding DruzynaId}" Width="50"/>
                <DataGridTextColumn Header="Nazwa Drużyny" Binding="{Binding Nazwa}" Width="2*"/>
                <DataGridTextColumn Header="Kategoria" Binding="{Binding Kategoria}" Width="*"/>
                <DataGridTextColumn Header="ID Trenera" Binding="{Binding TrenerId}" Width="80"/>
                <DataGridCheckBoxColumn Header="Aktywna" Binding="{Binding CzyAktywny}" Width="70"/>
                <DataGridTextColumn Header="Data Dodania" Binding="{Binding KiedyDodal, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Uwagi" Binding="{Binding Uwagi}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>

        <local:JedenViewBase Grid.Row="1" 
                             Visibility="{Binding IsAdding, Converter={StaticResource BoolToVis}}"
                             Margin="0,10,0,0">
            <Border BorderBrush="#B80006" BorderThickness="0,2,0,0" Background="#F9F9F9" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="10,5">
                        <Label Content="Nazwa Drużyny:"/>
                        <TextBox Text="{Binding Nazwa, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,5">
                        <Label Content="Kategoria:"/>
                        <TextBox Text="{Binding Kategoria, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,5">
                        <Label Content="Trener (ID Numer):"/>
                        <TextBox Text="{Binding TrenerId, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="3" Margin="10,5">
                        <Label Content="Status Aktywności:"/>
                        <ComboBox ItemsSource="{Binding StatusyOptions}" 
                                  SelectedItem="{Binding CzyAktywnyWybor, ValidatesOnDataErrors=True}"
                                  Style="{StaticResource ValidControlStyle}" Height="25"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,5">
                        <Label Content="Autor wpisu:"/>
                        <TextBox Text="{Binding KtoDodal, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,5">
                        <Label Content="Data Dodania:"/>
                        <DatePicker SelectedDate="{Binding KiedyDodal, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                    Style="{StaticResource ValidControlStyle}" Height="25"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,5">
                        <Label Content="Uwagi:"/>
                        <TextBox Text="{Binding Uwagi, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="3" Margin="10,5">
                        <Label Content="Modyfikował:"/>
                        <TextBox Text="{Binding KtoModyfikowal, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </local:JedenViewBase>
    </Grid>
</local:WszystkieViewBase>