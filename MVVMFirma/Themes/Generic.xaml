<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:KlubSportowy.Views">

    <BooleanToVisibilityConverter x:Key="BoolToVis" />

    <SolidColorBrush x:Key="MainRedBrush" Color="#B80006"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextWhiteBrush" Color="#FFFFFF"/>

    <Style x:Key="ToolbarButtonStyle" TargetType="ToggleButton">
        <Setter Property="Background" Value="{StaticResource MainRedBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
        <Setter Property="Padding" Value="15,5"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,2"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:WszystkieViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WszystkieViewBase}">
                    <Grid Background="{StaticResource SurfaceBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,5">
                            <ToggleButton Content="Dodaj" Command="{Binding AddCommand}" Style="{StaticResource ToolbarButtonStyle}"/>
                            <ToggleButton Content="Edytuj" Style="{StaticResource ToolbarButtonStyle}"/>
                            <ToggleButton Content="Kasuj" Style="{StaticResource ToolbarButtonStyle}"/>
                            <ToggleButton Content="Odswiez" Command="{Binding LoadCommand}" Style="{StaticResource ToolbarButtonStyle}"/>
                        </StackPanel>

                        <Border Grid.Row="1" Margin="10,5" BorderBrush="#EEE" BorderThickness="1" CornerRadius="3">
                            <Expander Header="Sortowanie i filtrowanie" IsExpanded="False" Padding="10" Background="#FBFBFB">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Content="Szukaj w:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <ComboBox Grid.Column="1" ItemsSource="{Binding FilterColumnOptions}" 
                                              SelectedItem="{Binding SelectedFilterColumn}" Height="25" VerticalContentAlignment="Center"/>

                                    <Label Grid.Column="2" Content="Fraza:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                    <TextBox Grid.Column="3" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                                             Height="25" VerticalContentAlignment="Center"/>

                                    <Label Grid.Column="4" Content="Sortuj po:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                    <ComboBox Grid.Column="5" ItemsSource="{Binding SortOptions}" 
                                              SelectedItem="{Binding SortBy}" Height="25" VerticalContentAlignment="Center"/>

                                    <Button Grid.Column="6" Content="Zastosuj" Command="{Binding LoadCommand}" 
                                            Width="80" HorizontalAlignment="Left" Margin="15,0" Padding="5,0"/>
                                </Grid>
                            </Expander>
                        </Border>

                        <ContentPresenter Grid.Row="2" Margin="10,5,10,10"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:JedenViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:JedenViewBase}">
                    <Border BorderBrush="#B80006" BorderThickness="0,2,0,0" Margin="0,10,0,0">
                        <Grid Background="{StaticResource SurfaceBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                                <ToggleButton Content="Zapisz i zamknij" Command="{Binding SaveAndCloseCommand}" Style="{StaticResource ToolbarButtonStyle}"/>
                            </StackPanel>
                            <ContentPresenter Grid.Row="1" Margin="10"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>