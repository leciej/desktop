<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:KlubSportowy.Views">

    <SolidColorBrush x:Key="MainRedBrush" Color="#B80006"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#B80006"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextWhiteBrush" Color="#FFFFFF"/>

    <Style x:Key="ToolbarButtonStyle" TargetType="ToggleButton">
        <Setter Property="Background" Value="{StaticResource MainRedBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextWhiteBrush}"/>
        <Setter Property="Padding" Value="15,5"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,2"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:WszystkieViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WszystkieViewBase}">
                    <Grid Background="{StaticResource SurfaceBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" Padding="10,5">
                            <TextBlock Text="Przestrzen robocza" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        </Border>

                        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="0,0,0,1" Background="#F9F9F9">
                            <StackPanel Orientation="Horizontal" Margin="5,5,5,0">
                                <Border Background="White" BorderBrush="#DDD" BorderThickness="1,1,1,0" Padding="10,5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                        <Button Content="✕" Margin="10,0,0,0" Background="Transparent" BorderThickness="0" Cursor="Hand" FontSize="10"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,15">
                            <ToggleButton Content="Edytuj" Style="{StaticResource ToolbarButtonStyle}"/>
                            <ToggleButton Content="Kasuj" Style="{StaticResource ToolbarButtonStyle}"/>
                            <ToggleButton Content="Odswiez" Command="{Binding LoadCommand}" Style="{StaticResource ToolbarButtonStyle}"/>
                        </StackPanel>

                        <Border Grid.Row="3" Margin="10,0,10,10" BorderBrush="#EEE" BorderThickness="1" CornerRadius="3">
                            <StackPanel>
                                
                                <Expander Header="Sortowanie i filtrowanie" IsExpanded="True" Background="#FBFBFB">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Content="Szukaj (Nazwisko):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBox Grid.Column="1" Text="{Binding FilterNazwisko, UpdateSourceTrigger=PropertyChanged}" Height="25" VerticalContentAlignment="Center"/>

                                        <Label Grid.Column="2" Content="Sortuj po:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                                        <ComboBox Grid.Column="3" ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SortBy}" Height="25" VerticalContentAlignment="Center"/>

                                        <Button Grid.Column="4" Content="Zastosuj" Command="{Binding LoadCommand}" 
                                                Width="100" HorizontalAlignment="Left" Margin="20,0" Padding="5,0"/>
                                    </Grid>
                                </Expander>
                            </StackPanel>
                        </Border>

                        <ContentPresenter Grid.Row="4" Margin="10,0,10,10"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>